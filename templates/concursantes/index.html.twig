{% extends 'base.html.twig' %}

{% block title %}Concursantes index{% endblock %}

{% block body %}
    <h1>Concursantes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdConcursante</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Curso</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concursante in concursantes %}
            <tr>
                <td>{{ concursante.idConcursante }}</td>
                <td>{{ concursante.nombre }}</td>
                <td>{{ concursante.apellidos }}</td>
                <td>{{ concursante.curso }}</td>
                <td>
                    <a href="{{ path('concursantes_show', {'idConcursante': concursante.idConcursante}) }}">show</a>
                    <a href="{{ path('concursantes_edit', {'idConcursante': concursante.idConcursante}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('concursantes_new') }}">Create new</a>
{% endblock %}
